{
	"version": "2.0.0",
	"tasks": [ 
		{
			"label": "echo wrkspace",
			"type": "shell",
			"command": "echo ${workspaceFolder}"
		}, 
		{
			"label": "create build folder",
			"type": "shell",
			"command": "mkdir -p ${workspaceFolder}/bld " 
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++-9 build project",
			"command": "/usr/bin/g++-9",
			"dependsOn": [
				"create build folder"
			],
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/src/*.cpp",
				"${workspaceFolder}/test/*.cpp",
				"-o",
				"${workspaceFolder}/bld/server.out",
				"--include-directory=${workspaceFolder}/include"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++-9"
		}
	]
}